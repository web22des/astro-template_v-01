---
// components/BurgerButton.astro
import Icon from './icon/Icon.astro';

interface Props {
  isOpen?: boolean;
  onClick?: () => void;
}

const { isOpen = false, onClick } = Astro.props;
---

<button
  class="burger-button"
  aria-label={isOpen ? 'Закрыть меню' : 'Открыть меню'}
  aria-expanded={isOpen}
  aria-controls="mobile-menu"
  on:click={onClick}
>
  <Icon name={isOpen ? 'close' : 'menu'} class="burger-button__icon" />
</button>

<style lang="scss">
  @use '@styles/utils/_focus-visible.scss' as *;

  .burger-button {
    --size: 40px;
    --color: var(--md-sys-color-on-surface);
    --transition: transform 0.3s ease, opacity 0.2s ease;

    display: flex;
    align-items: center;
    justify-content: center;
    width: var(--size);
    height: var(--size);
    padding: 0;
    background: transparent;
    border: none;
    cursor: pointer;
    transition: var(--transition);

    &:hover {
      opacity: 0.8;
    }

    @include focus-visible;

    &__icon {
      font-size: 24px;
      color: var(--color);
      transition: var(--transition);
    }
  }
</style>